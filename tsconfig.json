{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "typeRoots": [
      "./typings/",
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "sass"
    ],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": [
        "instruments/common/hooks/*"
      ],
      "@hooks": [
        "instruments/common/hooks"
      ],
      "@common/*": [
        "instruments/common/*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "node_modules/@types",
    "instruments/src/**/*.ts",
    "instruments/src/**/*.tsx",
    "mach.config.js"
  ]
}
